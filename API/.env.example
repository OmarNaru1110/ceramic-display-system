# Example environment variables that will override appsettings.json values
# Copy this file to .env and modify as needed

# Connection Strings (use double underscores to represent nested JSON structure)
ConnectionStrings__DefaultConnection=Server=your-server;Database=your-database;User Id=your-user;Password=your-password;TrustServerCertificate=true;

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning

# Serilog Configuration  
Serilog__MinimumLevel__Default=Information
Serilog__WriteTo__0__Name=Console
Serilog__WriteTo__1__Name=File
Serilog__WriteTo__1__Args__path=logs/prod-log-.txt

# Application Settings
AllowedHosts=your-domain.com

# Identity Configuration (if needed)
Identity__Password__RequiredLength=8
Identity__Password__RequireDigit=true
Identity__Password__RequireLowercase=true
Identity__Password__RequireUppercase=true
Identity__Password__RequireNonAlphanumeric=true

# CORS Settings (if you want to override)
Cors__AllowedOrigins__0=https://your-frontend-domain.com